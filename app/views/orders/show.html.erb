<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>
  
  <div class="alert alert-info" role="alert">
  A confirmation e-mail will be sent to the following: <%= @order.email %>
  </div>
  
  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <% @order.line_items.each do |item| %>
      <%= render 'line_item', product: item.product, order_item: item, quantity: item[:quantity].to_i %>
    <% end %>
    <div>
    Your total is: <%= number_to_currency(@order.total_cents / 100.0) %>
    </div>

  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
